<会員一覧>

<table>
  <thead>
    <tr>
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>

      <td><%= link_to admin_customer_path(customer) do %>

      <% customer.last_name %>
      <% customer.first_name %>

      <% end %>
      </td>

      <td><%= customer.email %></td>

      <td><% if customer.is_active == false %>
              有効
              <% else %>
              無効
              <% end %>
      </td>

    </tr>

    <% end %>
   <%= paginate @customers %>
  </tbody>
</table>

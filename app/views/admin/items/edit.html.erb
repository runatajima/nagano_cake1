<h3>商品編集</h3>

<%= form_with model: @item , url: admin_items_url  do |f| %>
<div>商品画像
 <%= f.file_field :image, accept: "image/*" , :size => '350×350'%>
 </div>

<div>商品名
<%= f.text_field :name %>
</div>
<div>商品説明
<%= f.text_area :introduction %>
</div>
<div>ジャンル
<%= f.collection_select  :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %>
</div>
<div>税抜価格
<%= f.text_field :price %>
</div>
<div>販売ステータス
<%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %>
</div>
<div>
<%= f.submit "更新" %>
</div>
<% end %>
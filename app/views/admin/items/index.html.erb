<<h2>商品一覧</h2>

<div><%= link_to "新規登録",new_admin_item_path %></div>



<table>
  <thead>
    <tr>
      <td>商品ID</td>
      <td>商品名</td>
      <td>税抜価格</td>
      <td>ジャンル</td>
      <td>ステータス</td>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name ,admin_item_path(item) %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active == false %>
              販売中
              <% else %>
              販売停止中
              <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>